<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PrepAI</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    
    <!-- Your Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        body { 
            font-family: 'Inter', sans-serif; /* Example font */
        }
    </style>
</head>
<body class="flex flex-col min-h-screen bg-gray-50">
    
    <!-- Include the Tailwind Navbar -->
    <%- include('../includes/navbar.ejs') %>

    <!-- Main content will be injected here -->
    <main class="flex-grow container mx-auto p-4 md:p-8">
        <%- body %>
    </main>

    <!-- Include the Tailwind Footer -->
    <%- include('../includes/footer.ejs') %>

    <!-- ** THIS SCRIPT FIXES THE HAMBURGER MENU ** -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const menuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const icon = menuButton.querySelector('i');

            // Check if the button exists before adding an event listener
            if (menuButton) {
                menuButton.addEventListener('click', () => {
                    // Show or hide the mobile menu
                    mobileMenu.classList.toggle('hidden');

                    // Switch the icon between hamburger and 'X'
                    icon.classList.toggle('fa-bars');
                    icon.classList.toggle('fa-xmark');
                });
            }
        });
    </script>
</body>
</html>